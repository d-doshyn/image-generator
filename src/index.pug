doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js") 
    //- bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")

    link(rel="shortcut-icon" href="./img/1.png") 
    link(rel="stylesheet" href="./css/style.sass")
    link(rel="stylesheet" href="./css/custom.scss")
    link(rel="stylesheet" href="./css/theme.sass")
 
    script(type="module" src="./js/custom.js")
    script(type="module" src="./js/roma.js")
    script(type="module" src="./js/fileSaver.js") 
    //- script(type="module" src="./js/leha-shalun.js") 
